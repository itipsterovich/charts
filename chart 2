import matplotlib.pyplot as plt

# Data
pipelines = ["Data Pipeline 1", "Data Pipeline 2", "Dependency Service", "Data Dependency Graph"]
events_processed = [500, 750, 250, 200]

# Create the bar chart
plt.figure(figsize=(8, 6))
plt.bar(pipelines, events_processed, color=['blue', 'green', 'orange', 'red'])
plt.xlabel("Components")
plt.ylabel("Number of Events Processed")
plt.title("Data Flow and Dependency")

# Display the chart
plt.show()
